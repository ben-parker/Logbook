@model Logbook.ViewModels.AddTrackedView

@{
    ViewData["Title"] = "Add";
}
@section Styles {
    <link href=@Url.Content("~/lib/jqueryui/jquery-ui.css") rel="stylesheet" type="text/css" />
}
<h2>Add</h2>

<h4>Tracked</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="tracked-fields">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                    <label asp-for="DueDate" class="control-label"></label>
                    <input type="text" class="datepicker" id="DueDate" name="DueDate" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <select asp-for="CategoryId" asp-items="@Model.Categories"></select>
                </div>
            </div>
            <div class="tracked-optional-fields">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="RepeatSelection"></label>
                        <select asp-for="RepeatSelection" asp-items="@Model.RepeatOptions"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src=@Url.Content("~/js/date.js") asp-append-version="true"></script>
}
